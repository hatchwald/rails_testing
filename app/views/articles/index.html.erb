<h1>List All Article</h1>
<%= link_to 'New Articles', new_article_path %>
<table class="table">
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>
    <% @article.each do |article| %>
        <tr>
            <td><%=  article.title %></td>
            <td><%=  article.text %></td>
            <td><%=  link_to 'Show',article_path(article) ,class: "btn btn-primary" %>
            <%=  link_to 'Edit',edit_article_path(article) ,class: "btn btn-warning" %>
            <%= link_to 'Destroy', article_path(article),method: :delete, data: {confirm: 'Are You Sure ?'},class: "btn btn-danger" %></td>
        </tr>
    <% end %>
</table>